<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Edit Youtube Video"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <youtube
                jcr:primaryType="cq:Panel"
                border="false"
                height=""
                title="Video"
                width="">
                <items jcr:primaryType="cq:WidgetCollection">
                    <videoID
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="98%"
                        fieldLabel="YouTube Video ID"
                        fieldSubLabel="The portion of the url following &quot;v=&quot;"
                        name="./youtubeVideoID"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <lightbox
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Show in Lightbox"
                        fieldSubLabel="link will open a popover display"
                        name="./lightbox"
                        type="checkbox"
                        validateOnBlur="true"
                        xtype="selection"/>
                </items>
            </youtube>
        </items>
    </items>
</jcr:root>
