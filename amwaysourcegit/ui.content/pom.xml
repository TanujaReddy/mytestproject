        </dependency>
        
        <dependency>
            <groupId>org.strut.amway</groupId>
            <artifactId>strut-amway.au.login.service</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>org.strut.amway</groupId>
            <artifactId>strut-amway.au.servlet.service</artifactId>
