<?xml version="1.0" encoding="UTF-8"?><components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <scr:component name="org.strut.amway.core.servlets.CommentsEmailService">
        <implementation class="org.strut.amway.core.servlets.CommentsEmailService"/>
        <service servicefactory="false">
            <provide interface="javax.servlet.Servlet"/>
        </service>
        <property name="sling.servlet.paths">
            /bin/CommentsEmailServlet
        </property>
        <property name="sling.servlet.methods">
            GET
        </property>
        <property name="sling.auth.requirements" value="-/bin/CommentsEmailServlet"/>
        <property name="service.vendor" value="Adobe"/>
        <property name="service.pid" value="org.strut.amway.core.servlets.CommentsEmailService"/>
        <reference name="emailService" interface="com.adobe.acs.commons.email.EmailService" cardinality="1..1" policy="static" bind="bindEmailService" unbind="unbindEmailService"/>
    </scr:component>
</components>
